<Window x:Class="Marinichev619_14._02._2023.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marinichev619_14._02._2023"
        mc:Ignorable="d"
        Title="{Binding ElementName =lTitle, Path=Content}" Height="450" Width="800">
    <StackPanel>
        <Label Name="lTitle" Content="Настройки" FontSize="{Binding ElementName=sSize, Path=Value}"/>
        <TextBox Name="tbHello" Text="Здравствуйте"/>
        <Slider Name="sSize" Minimum="1" Maximum="50"/>
    </StackPanel>
</Window>
